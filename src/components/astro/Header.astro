---
import { Bot, Github, Search, Slack } from "lucide-react";

import { Badge } from "@/ui/badge";
import { Button } from "@/ui/button";

import { ThemeToggle } from "../react/theme";
---

<header
  class="bg-background/90 fixed z-50 w-full border-b backdrop-blur backdrop-filter"
>
  <div
    class="mx-auto flex h-16 w-full max-w-screen-2xl items-center justify-between gap-2 px-4 md:px-8 lg:px-16"
  >
    <div class="items-center space-x-2.5 hidden lg:flex">
      <a
        href="/"
        aria-label="IA"
        class="tracking- flex items-center gap-2 font-medium no-underline"
      >
        <span
          class="bg-tertiary text-tertiary-foreground inline-flex items-center justify-center rounded-full p-1"
        >
          <Bot className="h-5 w-5" strokeWidth="1.5" />
        </span>
        <span class="hidden font-semibold tracking-tighter lg:inline">
          IA
        </span>
      </a>
      <Badge variant="secondary" className="hidden lg:inline-flex">
        {new Date().getFullYear()}
      </Badge>
    </div>
    <nav
      class="divide-border flex flex-1 grow items-center justify-end divide-x"
    >
      <div
        class="flex flex-1 grow items-center pr-2 md:max-w-64 lg:space-x-4 lg:pr-8"
      >
        <Button
          id="command-k"
          variant="outline"
          className="bg-muted/30 group relative w-full justify-between pl-8 pr-2 lg:cursor-text"
        >
          <Search className="absolute left-2 h-4 w-4" />
          <span>Buscar</span>
          <Badge
            variant="secondary"
            className="group-hover:border-tertiary group-hover:bg-background hidden lg:inline-flex"
          >
            âŒ˜K
          </Badge>
        </Button>
      </div>
      <div class="flex items-center gap-2 lg:pl-8 pl-2">
        <ThemeToggle client:load />
        <Button
          asChild
          size="icon"
          variant="ghost"
          className="text-muted-foreground shrink-0"
        >
          <a
            target="_blank"
            rel="noreferrer"
            href="https://github.com/ug-ai-nlp"
          >
            <Github className="h-4 w-4" />
            <span class="sr-only">Github</span>
          </a>
        </Button>
        <Button
          asChild
          size="icon"
          variant="ghost"
          className="text-muted-foreground shrink-0"
        >
          <a target="_blank" rel="noreferrer" href="https://pia2025.slack.com">
            <Slack className="h-4 w-4" />
            <span class="sr-only">Slack</span>
          </a>
        </Button>
      </div>
    </nav>
  </div>
</header>
